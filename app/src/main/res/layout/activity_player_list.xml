<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mm.sdkdemo.player.VerticalViewPager
        android:id="@+id/vp_video_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="裁切类型：" />

        <Button
            android:id="@+id/playlist_CENTER_CROP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="CENTER_CROP" />

        <Button
            android:id="@+id/playlist_FIT_XY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="FIT_XY" />

        <Button
            android:id="@+id/playlist_FIT_CENTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="FIT_CENTER" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软硬解开关：" />

        <Button
            android:id="@+id/playlist_codec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="切换软硬解" />

    </LinearLayout>
</FrameLayout>