<?xml version="1.0" encoding="utf-8"?>
<com.mm.sdkdemo.recorder.sticker.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/dynamic_sticker_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/dynamic_sticker_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_moment_face_loading"
        android:visibility="gone" />
</com.mm.sdkdemo.recorder.sticker.SquareFrameLayout>