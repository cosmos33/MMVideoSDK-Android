<?xml version="1.0" encoding="utf-8"?>
<com.immomo.videosdk.widget.paint.PaintPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moment_edit_paintpanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/moment_paint_panel_maskview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.immomo.videosdk.widget.paint.DrawableView
        android:id="@+id/moment_paint_panel_drawableview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/moment_paint_panel_btn_close"
        style="@style/Title_LEFT_RIGHT"
        android:text="取消" />

    <ImageView
        android:id="@+id/moment_paint_panel_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingTop="22dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_moment_edit_undo"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/moment_paint_panel_ok"
        style="@style/Title_LEFT_RIGHT"
        android:layout_alignParentRight="true"
        android:text="确认" />

    <com.immomo.videosdk.widget.AnimCheckableGroupView
        android:id="@+id/moment_paint_panel_acgview"
        style="@style/Anim_Checkable_Group_View_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="6dp"
        android:paddingBottom="19dp" />
</com.immomo.videosdk.widget.paint.PaintPanelView>