<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="输入视频文件路径或网络路径" />

    <Button
        android:id="@+id/choose_local_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="onClick"
        android:text="选择本地视频文件" />

    <Button
        android:id="@+id/go_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="播放" />

    <Button
        android:id="@+id/go_preload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="预加载" />

    <Button
        android:id="@+id/go_random_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="随机播放" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="裁切类型：" />

    <Button
        android:id="@+id/playlist_CENTER_CROP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="CENTER_CROP" />

    <Button
        android:id="@+id/playlist_FIT_XY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="FIT_XY" />

    <Button
        android:id="@+id/playlist_FIT_CENTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="FIT_CENTER" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="软硬解开关：" />

    <Button
        android:id="@+id/playlist_codec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="切换软硬解" />


</LinearLayout>
