<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_10dp_round_corner_e0121212"
    android:orientation="vertical">

    <FrameLayout
        android:clickable="true"
        android:id="@+id/top_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:text="道具"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/prop_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_moment_reset_btn"
            android:drawablePadding="5dp"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </FrameLayout>

    <View
        android:id="@+id/no_use"
        android:layout_below="@+id/top_root"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="19dp"
        android:alpha="0.1"
        android:background="@color/white" />

    <ViewStub
        android:id="@+id/record_face_viewstub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/no_use"
        android:layout="@layout/layout_moment_face_panel" />

    <FrameLayout
        android:background="@drawable/bg_moment_beauty_panel_mask"
        android:id="@+id/bottom_root"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:id="@+id/video_mini_face_record_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_record_gradient"
            android:gravity="center"
            android:textSize="14sp" />

    </FrameLayout>

</RelativeLayout>
