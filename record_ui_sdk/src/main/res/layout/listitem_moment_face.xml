<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/moment_face_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/moment_face_only_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_moment_face_only_sound"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/moment_face_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_moment_face_tag"
        android:drawablePadding="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:drawableLeft="@drawable/ic_moment_face_sound"
        tools:text="new"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/moment_face_select_bg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/bg_moment_face_select" />

    <ImageView
        android:id="@+id/moment_face_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_moment_face_download"
        android:visibility="gone"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/moment_face_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/moment_face_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_moment_face_loading"
            tools:visibility="visible" />
    </FrameLayout>
</FrameLayout>